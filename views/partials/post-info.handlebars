<article class="post">
    <div class="title">
        <a>{{title}}</a>
        <span>({{post_text}})</span>
    </div>
    <div class="meta">
        Posted by {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>